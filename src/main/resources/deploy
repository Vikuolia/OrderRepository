    metadata:
      labels:
        app: ta-orders
    spec:
      containers:
        - image: vicuolia/orderservice
          name: ta-orders
          ports:
            - containerPort: 8089
              name: ta-orders
          env:
            - name: POSTGRES_ENDPOINT
              value: "jdbc:postgresql://localhost:5432/"
            - name: POSTGRES_PASSWORD
              value: "1qwerty2asdfg"
